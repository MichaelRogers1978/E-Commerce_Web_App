# Environment Configuration
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=https://fakestoreapi.com

# App Configuration
VITE_APP_NAME=FakeStore E-Commerce
VITE_APP_VERSION=1.0.0

# Debug and Development
VITE_DEBUG_MODE=true
VITE_ENABLE_LOGGING=true

# Cache Configuration (in minutes)
VITE_QUERY_STALE_TIME=2
VITE_QUERY_CACHE_TIME=5

# UI Configuration
VITE_ITEMS_PER_PAGE=12
VITE_MAX_CART_ITEMS=99

# Feature Flags
VITE_ENABLE_WISHLIST=false
VITE_ENABLE_REVIEWS=false
VITE_ENABLE_SEARCH=true

# Authentication (Auth0) - Replace with your actual values
VITE_AUTH0_DOMAIN=your-auth0-domain.us.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id-here

# Future Payment Integration (replace with your actual keys)
# VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key_here
# VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Analytics (replace with your actual IDs)
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id